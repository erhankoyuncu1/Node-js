extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/forms.css")

block content
    .container.fluid.items-center.mt-4.mr-4
        if errorMessage
            div.alert.alert-danger.col-sm-6.text-center #{errorMessage}
        form.container.mt-4(action='/new-password', method='POST', style="margin-top:1rem")
            input(type="hidden" name="userId" value=`${userId}`)
            input(type="hidden" name="passwordToken" value=`${passwordToken}`)
            
            
            .form-group.row
            label.col-sm-2.col-form-label(for='password') Åžifre
            .col-sm-6
                input#password.form-control(type='password', name='password')

            .form-group.row
            .sol-sm-10.offset-sm-2
                input.btn.btn-primary.float-left(type='submit', value='Onayla')
        .mb-4