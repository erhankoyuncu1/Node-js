      li.nav-item
        a(href='/', class=(path === '/'?'nav-link active':'nav-link')) Ana Sayfa
      li.nav-item
        a(href='/products', class=(path === '/products'?'nav-link active':'nav-link')) Ürünler

      if isAuthenticated && !isAdmin
        li.nav-item
          a(href='/cart', class=(path === '/cart'?'nav-link active':'nav-link')) Sepet
        li.nav-item
          a(href='/orders', class=(path === '/orders'?'nav-link active':'nav-link')) Siparişler
        li.nav-item
          a(href='/add-product', class=(path === '/add-product'?'nav-link active':'nav-link')) Ürün Ekle
        li.nav-item
          a(href='/my-products', class=(path === '/my-products'?'nav-link active':'nav-link')) Ürünlerim
