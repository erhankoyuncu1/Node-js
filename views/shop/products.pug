extends ../layouts/main-layout.pug

include ../mixins/createProduct.pug 

block content
  .row.mt-4
    .col-3.container(style="position: fixed; top: 50px; right: 10px;")
      include ../includes/menu.pug
    .col-9(style="margin-left: 1rem")
      .row
        if products.length > 0
          each product in products
            +createProduct(product)
        else
          .container
            h1(style="text-align: center;margin-top:5%") Ürün Yok
  .mb-4