extends ../layouts/main-layout.pug

block content
    if orders.length > 0
        each order in orders
            .card.mb-5.container
                .card-header Başlık
                table.table
                    thead
                        tr
                            th Resim
                            th Ürün Ad 
                            th Adet
                            th Fiyat
                    tbody
                        each product in order.items
                            tr
                                td
                                    img(src=`/image/${product.image}` width="80px")
                                td #{product.name}
                                td #{product.quantity}
                                td #{product.price}
                    tfoot
                        tr
                            td(colspan="2") #{order.date}
                            td
                            -var total = 0;
                            each product in order.items
                                -total += (product.price * product.quantity)
                            td Toplam: #{total} Tl
    else
        h1 Sipariş Yok