extends ../layouts/main-layout.pug

block content
    .row.mt-4
        .col-4.container
            img(src=`/image/${product.image}` style="width: 100%; height: 70%" alt=`${product.description}`).
        .col-6.container
            .text-center.h2 #{product.name}
            hr(style="width:50%;")
            h5 Özellikler
            .container.ml-2
                ul
                    li RAM
                    li Hafıza
                    li Kamera
                    li Sürüm
            hr
            h5 Açıklama
            .container.ml-2
                p #{product.description}
            hr
            p.font-weight-bold Fiyat: 
                small
                    i.fa.fa-try  #{product.price}
            hr
            form.mt-2(action='/cart' method='POST')
                input(type='hidden' name='productId' value=`${product._id}`)
                button(type='submit').btn.btn-outline-success.ml-3 Sepet'e Ekle
    .mb-4