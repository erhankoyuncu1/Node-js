extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/forms.css")

block content
  form.container.mt-4(action='/admin/add-product', method='POST', style="margin-top:1rem")
    .form-group.row
      label.col-sm-2.col-form-label(for='name') İsim
      .col-sm-10
        input#name.form-control(type='text', name='name')

    .form-group.row
      label.col-sm-2.col-form-label(for='price') Fiyat
      .col-sm-10
        input#price.form-control(type='text', name='price')

    .form-group.row
      label.col-sm-2.col-form-label(for='image') Resim
      .col-sm-10
        input#image.form-control(type='text', name='image')

    //- .form-group.row
