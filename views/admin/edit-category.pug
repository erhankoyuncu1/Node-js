extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/forms.css")

block content
  form.container.mt-4(action='/admin/categories', method='POST')

    input(type="hidden" name="id" value=`${category._id}`)

    .form-group.row
      label.col-sm-2.col-form-label(for='name') İsim
      .col-sm-10
        input#name.form-control(type='text' value=`${category.name}` name='name')
    
    .form-group.row
      label.col-sm-2.col-form-label(for='description') Açıklama
      .col-sm-10
        input#description.form-control(type='text' value=`${category.description}` name='description')

    .form-group.row
      .sol-sm-10.offset-sm-2
         input.btn.btn-warning.ml-3(type='submit', value='Kaydet')
  .mb-4